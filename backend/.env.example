# Django Backend Environment Configuration
# Copy this file to .env and update with your actual values

# Django Settings
SECRET_KEY=your-very-secure-secret-key-here-change-in-production
DEBUG=True
DJANGO_SETTINGS_MODULE=genfree_backend.settings.development

# Database Configuration
DB_NAME=genfree_db
DB_USER=postgres
DB_PASSWORD=password
DB_HOST=localhost
DB_PORT=5432
USE_POSTGRES=False

# For production, use DATABASE_URL instead
# DATABASE_URL=postgresql://user:pass@host:port/dbname

# Redis Configuration (for caching and Celery)
REDIS_URL=redis://localhost:6379

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@genfree.org

# Flutterwave Payment Gateway
FLUTTERWAVE_SECRET_KEY=FLWSECK_TEST-your-secret-key-here
FLUTTERWAVE_PUBLIC_KEY=FLWPUBK_TEST-your-public-key-here
FLUTTERWAVE_WEBHOOK_SECRET=your-webhook-secret-here

# Domain Configuration
DOMAIN=localhost:8000
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# AWS S3 Configuration (Optional - for production file storage)
USE_S3=False
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=your-s3-bucket-name
AWS_S3_REGION_NAME=us-east-1

# Sentry Error Tracking (Optional)
SENTRY_DSN=your-sentry-dsn-here

# Social Authentication (Optional)
GOOGLE_OAUTH2_CLIENT_ID=your-google-client-id
GOOGLE_OAUTH2_CLIENT_SECRET=your-google-client-secret
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# SMS Configuration (Optional)
SMS_BACKEND=your-sms-provider
SMS_API_KEY=your-sms-api-key

# Analytics
GOOGLE_ANALYTICS_ID=GA-XXXXXXX